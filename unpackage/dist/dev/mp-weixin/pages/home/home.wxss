/* 文章场景相关 */
page {
  min-height: 100vh;
  background-color: #fff;
}
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
}
.header .logo image {
  width: 190rpx;
  height: 64rpx;
}
.header .selected {
  margin-right: auto;
  margin-left: 20rpx;
  border-radius: 40rpx;
  padding: 10rpx 20rpx;
  border: 1rpx solid #ececec;
}
.header .search-message {
  position: relative;
}
.header .search-message .number {
  position: absolute;
  right: -6rpx;
  top: -6rpx;
}
.indicator {
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.indicator__dot {
  height: 12rpx;
  width: 12rpx;
  border-radius: 100px;
  background-color: rgba(255, 255, 255, 0.35);
  margin: 0 10rpx;
  transition: background-color 0.3s;
}
.indicator__dot--active {
  width: 24rpx;
  background-color: #ffffff;
}
.scroll-list {
  display: flex;
  flex-direction: column;
}
.scroll-list__goods-item {
  margin-right: 40rpx;
  text-align: center;
}
.scroll-list__goods-item__image {
  width: 60px;
  height: 60px;
  border-radius: 50%;
}
.scroll-list__goods-item__text {
  text-align: center;
  font-size: 24rpx;
  margin-top: 10rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.banner {
  width: 100%;
  height: 120rpx;
  position: relative;
}
.banner image {
  width: 100%;
  height: 100%;
}
.banner .content {
  display: flex;
  flex-direction: column;
  position: absolute;
  top: 0;
  left: 0;
  padding: 20rpx 0 0 50rpx;
}
.recommend .wrap {
  padding: 20rpx;
}
.recommend_tabs {
  display: flex;
  justify-content: space-around;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}
.recommend_tabs .active {
  color: #CB242B;
  position: relative;
}
.recommend_tabs .active image {
  width: 128rpx;
  height: 12rpx;
  position: absolute;
  left: 0;
  bottom: 0rpx;
}
.recommend_institution .item {
  padding: 20px 10px 0px 10px;
  background-color: #fff;
  margin-bottom: 16rpx;
  border-radius: 16rpx;
}
.recommend_institution .item image {
  width: 180rpx;
  height: 180rpx;
}
.recommend_institution .item .info {
  padding-bottom: 16rpx;
  display: flex;
}
.recommend_institution .item .info .img-wrap {
  width: 208rpx;
  height: 180rpx;
  position: relative;
}
.recommend_institution .item .info .img-wrap image {
  border-radius: 10rpx;
}
.recommend_institution .item .info .img-wrap .number {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 180rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  color: #fff;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
  background-color: rgba(51, 51, 51, 0.5);
}
.recommend_institution .item .info .tag {
  display: flex;
  flex-wrap: wrap;
  margin: 10rpx 0;
}
.recommend_institution .item .info .tag .u-tag {
  margin-right: 10px;
}
.recommend_institution .item .info .location {
  display: flex;
  align-items: center;
}
.recommend_institution .item .info .location text:first-child {
  color: #333;
}
.recommend_institution .item .info .location text:nth-child(2) {
  margin-right: auto;
  margin-left: 10rpx;
}
.recommend_institution .item .subject .row {
  display: flex;
  border-bottom: 1rpx dashed #e2e2e2;
  padding: 10px 0;
}
.recommend_institution .item .subject .row .sub_title {
  width: 208rpx;
  color: #CB242B;
  font-size: 32rpx;
  font-weight: bold;
}
.recommend_institution .item .subject .row .course {
  display: flex;
  align-items: center;
}
.recommend_institution .item .subject .row .course .wf-wrap {
  background-color: red;
}
.recommend_institution .item .subject .row .course text:first-child {
  background-color: rgba(203, 36, 43, 0.2);
  color: #CB242B;
  padding: 2rpx 4rpx;
  margin-right: 8px;
}
.recommend_institution .item .subject .row:last-child {
  border: none;
}

