.negotiation-history .history-wrap {
  font-size: 28rpx;
}
.negotiation-history .history-wrap .history-list {
  margin-bottom: 60rpx;
}
.negotiation-history .history-wrap .history-list .user-info {
  display: flex;
  align-items: center;
}
.negotiation-history .history-wrap .history-list .user-info .avatart {
  width: 64rpx;
  height: 64rpx;
  margin-right: 10rpx;
}
.negotiation-history .history-wrap .history-list .user-info .avatart image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 1rpx solid #CB242B;
}
.negotiation-history .history-wrap .history-list .content {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-top: 30rpx;
  position: relative;
}
.negotiation-history .history-wrap .history-list .content::after {
  content: '';
  position: absolute;
  left: 32rpx;
  top: -12rpx;
  width: 0;
  height: 0;
  border-left: 12rpx solid transparent;
  border-right: 12rpx solid transparent;
  border-bottom: 12rpx solid #fff;
}
.negotiation-history .history-wrap .history-list .content .upload {
  display: flex;
}
.negotiation-history .history-wrap .history-list .content .upload image {
  width: 300rpx;
  height: 246rpx;
  border-radius: 8rpx;
}
.negotiation-history .footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 110rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.negotiation-history .footer view {
  margin-right: 30rpx;
}

