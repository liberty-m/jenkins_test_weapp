.brand-space {
  padding: 20rpx 40rpx;
  background-color: #fff;
  margin-top: 15rpx;
}
.scroll-list {
  display: flex;
  flex-direction: column;
}
.scroll-list__goods-item {
  margin-right: 40rpx;
  text-align: center;
}
.scroll-list__goods-item__image {
  width: 228px;
  height: 142px;
}
.scroll-list__goods-item__text {
  text-align: center;
  font-size: 24rpx;
  margin-top: 10rpx;
  width: 450rpx;
  display: inline-block;
}
.brand .banner image {
  width: 100%;
  height: 216rpx;
}
.brand .institution {
  display: flex;
  height: 170rpx;
  background-color: #fff;
  padding: 20rpx 40rpx;
}
.brand .institution image {
  height: 194rpx;
  margin-right: 30rpx;
  position: relative;
  top: -60rpx;
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 12px 0 rgba(0, 0, 0, 0.19);
  border-radius: 8rpx;
}
.brand .institution .ins-name {
  display: flex;
  flex-direction: column;
  flex: 1;
}
.brand .story .content {
  padding: 10rpx 20rpx;
  font-size: 28rpx;
  line-height: 50rpx;
}
.brand .features .wrap {
  display: flex;
  flex-wrap: wrap;
}
.brand .features .wrap .item {
  width: 300rpx;
  display: flex;
  align-items: center;
  color: #999;
  font-size: 28rpx;
  margin-bottom: 10rpx;
}
.brand .features .wrap .item .circle {
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  background-color: #CB242B;
}
.brand .qualification .history-list {
  font-size: 28rpx;
}
.brand .qualification .history-list .content {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-top: 30rpx;
  position: relative;
  color: #999;
}
.brand .qualification .history-list .content text {
  color: #333;
}
.brand .qualification .history-list .content .item {
  display: flex;
  margin-bottom: 15rpx;
}
.brand .qualification .history-list .content .item .title {
  width: 160rpx;
}
.brand .qualification .history-list .content::after {
  content: '';
  position: absolute;
  left: 32rpx;
  top: -12rpx;
  width: 0;
  height: 0;
  border-left: 12rpx solid transparent;
  border-right: 12rpx solid transparent;
  border-bottom: 12rpx solid #fff;
}
.brand .qualification .history-list .content .upload {
  display: flex;
}
.brand .qualification .history-list .content .upload image {
  width: 426rpx;
  height: 308rpx;
}
.brand .localtion {
  padding-bottom: 40rpx;
}
.qualificationsPopup {
  height: 600rpx;
}
.qualificationsPopup .title {
  height: 90rpx;
  line-height: 90rpx;
  font-size: 32rpx;
  color: #333333;
  font-weight: bold;
}
.qualificationsPopup .code-box {
  margin: 90rpx 120rpx 0;
}
.qualificationsPopup .code-box .tips {
  color: #333333;
  font-size: 28rpx;
  font-weight: 400;
  margin-bottom: 60rpx;
}
.qualificationsPopup .code-box .code-input {
  width: 320rpx;
  height: 52rpx;
  border-bottom: 1px solid #7F7F7F;
  padding-left: 32rpx;
}
.qualificationsPopup .code-box .get-code-text {
  margin-left: 46rpx;
  text-align: center;
  line-height: 52rpx;
  width: 156rpx;
  height: 52rpx;
  border-radius: 40rpx;
  color: #000;
  font-size: 24rpx;
  border: 1px solid #BC292D;
  letter-spacing: 6rpx;
}
.qualificationsPopup .ver-code-btn {
  width: 628rpx;
  height: 84rpx;
  background: #BC292D;
  border-radius: 56rpx;
  font-size: 32rpx;
  color: #FFFFFF;
  text-align: center;
  line-height: 84rpx;
  margin: 102rpx auto 0 auto;
}

